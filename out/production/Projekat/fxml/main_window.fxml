            <Button fx:id="buttonStorageReport" mnemonicParsing="false" onAction="#actionButtonStorageReport" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Storages report" />
            <Button fx:id="buttonServiceReport" mnemonicParsing="false" onAction="#actionButtonServiceReport" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Service report" />
            <Button fx:id="buttonEquipmentReport" mnemonicParsing="false" onAction="#actionButtonEquipmentReport" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Equipments report" />
            <Button fx:id="buttonPartReport" mnemonicParsing="false" onAction="#actionButtonPartReport" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Parts report" />
         </children>
         <styleClass>
            <String fx:value="alignment" />
            <String fx:value="spacing" />
         </styleClass>
