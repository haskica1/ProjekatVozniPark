         <styleClass>
            <String fx:value="spacing" />
            <String fx:value="alignment" />
         </styleClass>
      </VBox>
      <Label text="Reports:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      <VBox stylesheets="@../css/vBoxLayout.css" GridPane.columnIndex="2" GridPane.rowIndex="2">
         <children>
            <Button fx:id="buttonVehiclesReport" mnemonicParsing="false" onAction="#actionButtonVehiclesReport" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Vehicles report" />
