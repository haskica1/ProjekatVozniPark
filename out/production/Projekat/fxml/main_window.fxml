    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label fx:id="labelWelcome" text="Welcome" />
      <Label text="Please choose:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <VBox stylesheets="@../css/vBoxLayout.css" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <Button fx:id="buttonVehicle" mnemonicParsing="false" onAction="#vehicleButtonAction" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Vehicle" />
            <Button fx:id="buttonEmployee" mnemonicParsing="false" onAction="#employeeButtonAction" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Employees" />
            <Button fx:id="buttonStorage" mnemonicParsing="false" onAction="#storageButtonAction" styleClass="buttonWidth" stylesheets="@../css/buttonLayout.css" text="Storage" />
